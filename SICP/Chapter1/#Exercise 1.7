(define (new-sqrt-iter guess x prev-guess)
	(if (small-enough (- prev-guess guess) prev-guess)
		guess
		(new-sqrt-iter (improve guess x) x guess)))

(define (small-enough a b)
	(< (abs (/ a b)) 0.001))

(define (square x)
	(* x x))

(define (improve guess x)
	(average (/ x guess) x))

(define (average x y)
	(/ (+ x y) 2))

(define (sqrt x)
	(new-sqrt-iter 1.0 x))

(define (abs x)
	(if (< x 0)
		(- x)
		x))